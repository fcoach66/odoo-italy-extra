<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
			<!-- disable default report multi action -->
		<record id="account.account_invoices" model="ir.actions.report">
			<field name="binding_model_id" eval="False"/>
		</record>
		<record id="account.account_invoices_without_payment" model="ir.actions.report">
			<field name="binding_model_id" eval="False"/>
		</record>

		<!-- Printed Invoice -->
		<record id="action_aeroo_report_it_invoice_pdf" context="{'no_key_lines':True}" model="ir.actions.report">
		    	<field name="name">Fattura Aeroo PDF</field>
        		<field name="model">account.invoice</field>
			<field name="sequence" eval="7"/>  
		    	<field name="report_name">aeroo_report_it_invoice_pdf</field>
        		<field name="report_type">aeroo</field>
			<field name="in_format">oo-odt</field>
			<field name="report_file">l10n_it_aeroo_invoice/report/invoice.odt</field>
			<field name="tml_source">file</field>
			<field name="print_logo">no_logo</field>
			<field name="background_image" type="base64" file="l10n_it_aeroo_invoice/report/invoice.png"/>
			<field name="use_background_image" eval="False"/>
			<field name="process_sep" eval="True"/>
			<field name="account_invoice_split_invoice" eval="False"/>
			<field name="account_invoice_lines_to_split">20</field>
			<field name="out_format" ref="report_aeroo.report_mimetypes_pdf_odt"/>
			<field name="print_report_name">((object.document_type_id.report_name or 'Fattura')) + " " + (object.document_number or '')</field>
		</record>

		<record id="action_aeroo_report_it_invoice_odt" context="{'no_key_lines':True}" model="ir.actions.report">
		    <field name="name">Fattura Aeroo ODT</field>
        	<field name="model">account.invoice</field>
			<field name="sequence" eval="7"/>  
		    <field name="report_name">aeroo_report_it_invoice_odt</field>
        	<field name="report_type">aeroo</field>
			<field name="in_format">oo-odt</field>
			<field name="report_file">l10n_it_aeroo_invoice/report/invoice.odt</field>
			<field name="tml_source">file</field>
			<field name="print_logo">no_logo</field>
			<field name="background_image" type="base64" file="l10n_it_aeroo_invoice/report/invoice.png"/>
			<field name="use_background_image" eval="False"/>
			<field name="process_sep" eval="True"/>
			<field name="account_invoice_split_invoice" eval="False"/>
			<field name="account_invoice_lines_to_split">20</field>
			<field name="out_format" ref="report_aeroo.report_mimetypes_odt_odt"/>
			<field name="print_report_name">((object.document_type_id.report_name or 'Fattura')) + " " + (object.document_number or '')</field>
		</record>
		
