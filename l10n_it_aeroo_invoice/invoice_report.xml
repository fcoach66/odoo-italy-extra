<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="action_aeroo_report_it_invoice" model="ir.actions.report.xml">
            <field name="name">Fattura Aeroo</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">account.invoice</field>
            <field name="sequence" eval="7"/>            
            <field name="report_name">account.report_invoice_aeroo</field>
            <field name="report_type">aeroo</field>
            <field name="in_format">oo-odt</field>
            <field name="parser_loc">l10n_it_aeroo_base/parser.py</field>
            <field name="parser_state">loc</field>
            <field name="report_rml">l10n_it_aeroo_invoice/fattura.odt</field>
            <field name="tml_source">file</field>
            <field name="print_logo">company_logo</field> <!-- Or 'company_logo' or ''  -->
            <field name="background_image" type="base64" file="l10n_it_aeroo_invoice/invoice.png"/>
            <field name="use_background_image" eval="True"/>
            <field name="out_format" ref="report_aeroo.report_mimetypes_pdf_odt"/>
        </record>
	
		<record id="view_invoice_form_aeroo_print" model="ir.ui.view">
			<field name="name">account.invoice.form.aeroo.print</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>

			<field name="arch" type="xml">
				<xpath expr="//button[@name='invoice_print']"
					 position="attributes">
					 <attribute name="name">invoice_print</attribute>
				</xpath>
				<xpath expr="//button[@name='invoice_print']"
					 position="attributes">
					 <attribute name="name">invoice_print</attribute>
				</xpath>				
				<xpath expr="//button[@name='action_invoice_sent']"
					 position="attributes">
					 <attribute name="name">action_invoice_sent</attribute>
				</xpath>				
				<xpath expr="//button[@name='action_invoice_sent']"
					 position="attributes">
					 <attribute name="name">action_invoice_sent</attribute>
				</xpath>				
			</field>
        </record>
	</data>
</openerp>
