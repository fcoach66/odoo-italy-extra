<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_form_with_aeroo_ddt_template" model="ir.ui.view">
        <field name="name">Account Config With Aeroo Ddt Template</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-string="Inventory" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Aeroo Ddt Template" for="aeroo_ddt_template_id"/>
                        <div class="text-muted">
                            Main report template used for generating customer ddt.
                        </div>
                        <div class="content-group">
                            <field name="aeroo_ddt_template_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
