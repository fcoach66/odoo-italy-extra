<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		    <!-- disable default report multi action -->
		<record id="sale.action_report_saleorder" model="ir.actions.report">
			<field name="binding_model_id" eval="False"/>
		</record>

		
		<record id="action_aeroo_report_it_sale_order_odt" model="ir.actions.report">
			<field name="name">Preventivo / Ordine di Vendita Aeroo ODT</field>
			<field name="model">sale.order</field>
			<field name="sequence" eval="7"/>
			<field name="report_name">aeroo_report_it_sale_order_odt</field>
			<field name="report_type">aeroo</field>
			<field name="in_format">oo-odt</field>
			<field name="report_rml">l10n_it_aeroo_sale/sale_order.odt</field>
			<field name="tml_source">file</field>
			<field name="print_logo">company_logo</field> <!-- Or 'company_logo' or ''  -->
			<field name="background_image" type="base64" file="l10n_it_aeroo_sale/sale_order.png"/>
			<field name="process_sep" eval="True"/>
			<field name="use_background_image" eval="False"/>
			<field name="out_format" ref="report_aeroo.report_mimetypes_odt_odt"/>
			<field name="print_report_name">(object.state in ['sale','done'] and 'Ordine di Vendita %s' or 'Preventivo %s') % object.name</field>
		</record>

		<record id="action_aeroo_report_it_sale_order_pdf" model="ir.actions.report">
			<field name="name">Preventivo / Ordine di Vendita Aeroo PDF</field>
			<field name="model">sale.order</field>
			<field name="sequence" eval="7"/>
			<field name="report_name">aeroo_report_it_sale_order_pdf</field>
			<field name="report_type">aeroo</field>
			<field name="in_format">oo-odt</field>
			<field name="report_rml">l10n_it_aeroo_sale/sale_order.odt</field>
			<field name="tml_source">file</field>
			<field name="print_logo">company_logo</field> <!-- Or 'company_logo' or ''  -->
			<field name="background_image" type="base64" file="l10n_it_aeroo_sale/sale_order.png"/>
			<field name="process_sep" eval="True"/>
			<field name="use_background_image" eval="False"/>
			<field name="out_format" ref="report_aeroo.report_mimetypes_pdf_odt"/>
			<field name="print_report_name">(object.state in ['sale','done'] and 'Ordine di Vendita %s' or 'Preventivo %s') % object.name</field>
		</record>
		

		<function
			eval="([ref('action_aeroo_report_ar_sale_order')])"
			id="update_lines_ar_receipt"
			model="ir.actions.report"
			name="update_lines_that_apply"/>		
		

    </data>
</openerp>
