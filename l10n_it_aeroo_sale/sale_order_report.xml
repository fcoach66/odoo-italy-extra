<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="action_aeroo_report_it_sale_order" model="ir.actions.report.xml">
            <field name="name">Preventivo/Ordine di Vendita Aeroo</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">sale.order</field>
            <field name="sequence" eval="7"/>            
            <field name="report_name">sale.report_saleorder_aeroo</field>
            <field name="report_type">aeroo</field>
            <field name="in_format">oo-odt</field>
            <field name="parser_loc">l10n_it_aeroo_base/parser.py</field>
            <field name="parser_state">loc</field>
            <field name="report_rml">l10n_it_aeroo_sale/sale_order.odt</field>
            <field name="tml_source">file</field>
            <field name="print_logo">company_logo</field> <!-- Or 'company_logo' or ''  -->
            <field name="background_image" type="base64" file="l10n_it_aeroo_sale/sale_order.png"/>
            <field name="use_background_image" eval="True"/>
            <field name="out_format" ref="report_aeroo.report_mimetypes_pdf_odt"/>
        </record>

		<record id="view_order_form_aeroo_print" model="ir.ui.view">
			<field name="name">sale.order.form.aeroo.print</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@string='Print']"
					 position="replace" />
				<xpath expr="//button[@string='Print']"
					 position="replace" />
				<button name="l10n_it_aeroo_sale.print_quotation_aeroo" string="Print" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
				<button name="l10n_it_aeroo_sale.print_quotation_aeroo" string="Print" type="object" states="sent,progress,manual" groups="base.group_user"/>
				<xpath expr="//button[@string='Send by Email']"
					 position="replace" />
				<xpath expr="//button[@string='Send by Email']"
					 position="replace" />
				<button name="l10n_it_aeroo_sale.action_quotation_send_aeroo" string="Send by Email" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
                <button name="l10n_it_aeroo_sale.action_quotation_send_aeroo" string="Send by Email" type="object" states="sent,progress,manual" groups="base.group_user"/>
            </field>
        </record>
		
		
        <function
            eval="([ref('action_aeroo_report_it_sale_order')])"
            id="update_lines_it_receipt"
            model="ir.actions.report.xml"
            name="update_lines_that_apply"/>    
    </data>
</openerp>
